<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gameplaybackground"
    tools:context=".PuzzleActivity">

    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/_4sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/skipBtn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/skip"/>

        <TextView
            android:id="@+id/puzzleNumber"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Puzzle 1"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold|italic"
            android:background="@drawable/level_board"/>

        <ImageView
            android:id="@+id/life3"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/heart"/>

        <ImageView
            android:id="@+id/life2"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_toStartOf="@id/life3"
            android:layout_centerVertical="true"
            android:src="@drawable/heart"/>

        <ImageView
            android:id="@+id/life1"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_toStartOf="@id/life2"
            android:layout_centerVertical="true"
            android:src="@drawable/heart"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/puzzleBord"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:layout_below="@id/linear"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:src="@drawable/p1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ansTxtv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/_6sdp"
                android:background="@drawable/anstxtv_bg"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"/>

            <ImageView
                android:id="@+id/clearBtn"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:src="@drawable/delete"/>

            <TextView
                android:id="@+id/submitBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:textStyle="italic|bold"
                android:textSize="@dimen/_13sdp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ans0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/ansbtn_bg"
            android:gravity="center"
            android:text="1"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/ans1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_4sdp"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/ansbtn_bg"
            android:gravity="center"
            android:text="2"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/ans2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_4sdp"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/ansbtn_bg"
            android:gravity="center"
            android:text="3"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/ans3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_4sdp"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/ansbtn_bg"
            android:gravity="center"
            android:text="4"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/ans4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_4sdp"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/ansbtn_bg"
            android:gravity="center"
            android:text="5"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/ans5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_4sdp"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/ansbtn_bg"
            android:gravity="center"
            android:text="6"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/ans6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_4sdp"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/ansbtn_bg"
            android:gravity="center"
            android:text="7"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/ans7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_4sdp"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/ansbtn_bg"
            android:gravity="center"
            android:text="8"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/ans8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_4sdp"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/ansbtn_bg"
            android:gravity="center"
            android:text="9"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/ans9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_4sdp"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/ansbtn_bg"
            android:gravity="center"
            android:text="0"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white"/>

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>